<div class="container" ng-cloak>
    <div class="row">
        <div class="col-sm-4 col-sm-offset-3">
            <form ng-submit="submitName();">
                <div class="form-group">
                    <label for="name">GitHub Username</label>
                    <input type="text" class="form-control" id="name" ng-model="user.name" placeholder="e.g. ipaaa, shuyanglin, or audreyt...">
                </div>
                <button type="submit" ng-disabled="!user.name" class="btn btn-primary btn-lg">Submit</button>
            </form>
        </div>
    </div>
</div>
